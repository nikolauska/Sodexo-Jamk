<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent">
  
	<RelativeLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context="fi.tanik.harjoitustyo_ruokalista.MainActivity">
	        
	    <TextView
	        android:id="@+id/DateWeekText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true" 
	        android:layout_marginTop="2dp"/>
	    
	    <TextView
	        android:id="@+id/DateText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginTop="20dp"/>
	        
	    <Spinner 
	        android:id="@+id/FoodList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="50dp" />
	    
	    <TextView
	        android:id="@+id/ReviewText"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/FoodList"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"/>
	        
	    <RatingBar
	        android:layout_below="@+id/ReviewText"
	        android:id="@+id/ratingBar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:numStars="5"
	        android:stepSize="0.5"
	        android:isIndicator="true" />
	    
	    
	    <TextView
	        android:id="@+id/JsonText"
	      	android:layout_below="@+id/ratingBar"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_alignParentLeft="true" /> 
	    
	    <TextView
	        android:id="@+id/ReviewTextSelf"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/JsonText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"/>
	    
	    <RatingBar
	        android:id="@+id/ratingBarSelf"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/ReviewTextSelf"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:numStars="5"
	        android:stepSize="0.5" />
	    
		<Button
	        android:id="@+id/button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/ratingBarSelf"
	        android:layout_centerHorizontal="true"/>    
	</RelativeLayout>
</ScrollView>
